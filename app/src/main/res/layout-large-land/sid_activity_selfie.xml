<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".SIDSelfieActivity">

    <!--Shows camera preview-->


    <com.smileidentity.libsmileid.core.CameraSourcePreview
        android:id="@+id/cspCamera"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:overlay_height="360dp"
        app:overlay_width="300dp"
        app:progress_width="15dp" />

    <TextView
        android:id="@+id/tvPromptReposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:gravity="center"
        android:text="@string/lbl_selfie_reposition"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tvCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPromptReposition"
        android:layout_centerHorizontal="true"
        android:text="CAPTURE"
        android:visibility="gone"
        tools:visibility="visible" />
    <LinearLayout
        android:id="@+id/llSelfieBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/tvRetakeSelfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Another Selfie" />

        <Button
            android:id="@+id/tvContinueWithId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue With Id" />

        <Button
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue" />
    </LinearLayout>
</RelativeLayout>
