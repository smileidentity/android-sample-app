<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/consent_screen_consent_tooltip_block"
        android:background="@drawable/bckgrd"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivShield"
            style="@style/consent_screen_consent_tooltip_shield_img" />

        <ImageView
            android:id="@+id/ivClose"
            style="@style/consent_screen_consent_tooltip_close_btn" />

        <TextView
            android:id="@+id/tvHeading"
            style="@style/consent_screen_consent_tooltip_heading_txt"
            app:layout_constraintTop_toTopOf="@id/ivShield"
            app:layout_constraintBottom_toBottomOf="@id/ivShield"
            app:layout_constraintLeft_toRightOf="@id/ivShield"
            app:layout_constraintRight_toRightOf="@id/ivClose" />

        <TextView
            android:id="@+id/tvTooltip"
            style="@style/ConsentTooltipContentStyle"
            app:layout_constraintTop_toBottomOf="@id/ivShield"
            app:layout_constraintLeft_toRightOf="@id/ivShield"
            app:layout_constraintRight_toRightOf="@id/ivClose" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>