<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="com.demo.smileid.sid_sdk.ResourcesFragment">
    
    <TextView
        android:id="@+id/tvHeading"
        style="@style/res_fragment_heading_txt"
        tools:ignore="MissingConstraints" />

    <com.demo.smileid.sid_sdk.CustomResourceLink
        android:id="@+id/crlDocs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="linkClicked"
        app:bigTxt="@string/res_fragment_link_docs_txt"
        app:smallTxt="@string/res_fragment_link_docs_sub_txt"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        android:layout_marginTop="56dp" />

    <com.demo.smileid.sid_sdk.CustomResourceLink
        android:id="@+id/crlPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bigTxt="@string/res_fragment_link_policy_txt"
        app:smallTxt="@string/res_fragment_link_policy_sub_txt"
        app:layout_constraintTop_toBottomOf="@id/crlDocs"
        android:layout_marginTop="22dp" />

    <com.demo.smileid.sid_sdk.CustomResourceLink
        android:id="@+id/crlFaqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bigTxt="@string/res_fragment_link_faqs_txt"
        app:smallTxt="@string/res_fragment_link_faqs_sub_txt"
        app:layout_constraintTop_toBottomOf="@id/crlPolicy"
        android:layout_marginTop="22dp" />

    <com.demo.smileid.sid_sdk.CustomResourceLink
        android:id="@+id/crlIds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bigTxt="@string/res_fragment_link_id_types_txt"
        app:smallTxt="@string/res_fragment_link_id_types_sub_txt"
        app:lastItem="true"
        app:layout_constraintTop_toBottomOf="@id/crlFaqs"
        android:layout_marginTop="22dp" />

</androidx.constraintlayout.widget.ConstraintLayout>