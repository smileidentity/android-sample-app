<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <ProgressBar
        android:id="@+id/pbLoading"
        style="@style/auth_result_screen_progress_bar"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvConfidenceValue"
        style="@style/auth_result_screen_uploading_txt"
        app:layout_constraintTop_toBottomOf="@id/pbLoading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvResult"
        style="@style/auth_result_screen_result_txt"
        app:layout_constraintTop_toBottomOf="@+id/tvConfidenceValue"
        tools:ignore="MissingConstraints" />

    <ImageView
        style="@style/auth_result_screen_bottom_logo"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/vTransLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.85" />

    <TextView
        android:id="@+id/tvUploadNow"
        style="@style/auth_result_screen_upload_btn"
        android:onClick="uploadNow"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
