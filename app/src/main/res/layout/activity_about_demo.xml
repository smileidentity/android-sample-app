<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".AboutDemoActivity">

    <ImageView
        android:id="@+id/ivBackArrow"
        style="@style/about_demo_screen_back_img"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvHeading"
        style="@style/about_demo_screen_heading_txt"
        app:layout_constraintTop_toTopOf="@id/ivBackArrow"
        app:layout_constraintBottom_toBottomOf="@id/ivBackArrow"
        app:layout_constraintStart_toEndOf="@id/ivBackArrow"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivLogo"
        style="@style/about_demo_screen_logo_img"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvBigTxt"
        style="@style/about_demo_screen_big_txt"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvVersion"
        style="@style/about_demo_screen_version_txt"
        app:layout_constraintTop_toBottomOf="@id/tvBigTxt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvDesc"
        style="@style/about_demo_screen_small_txt"
        app:layout_constraintTop_toBottomOf="@id/tvVersion" />

    <TextView
        android:id="@+id/tvContactLink"
        style="@style/about_demo_screen_about_link_txt"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_marginTop="44dp"
        android:text="@string/about_demo_screen_contact_link_txt"
        android:drawableLeft="@drawable/ic_email" />

    <TextView
        android:id="@+id/tvWebsiteLink"
        style="@style/about_demo_screen_about_link_txt"
        app:layout_constraintTop_toBottomOf="@id/tvContactLink"
        android:layout_marginTop="16dp"
        android:text="@string/about_demo_screen_view_website_link_txt"
        android:drawableLeft="@drawable/ic_web_link" />

</androidx.constraintlayout.widget.ConstraintLayout>