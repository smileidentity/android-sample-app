<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".AboutDemoActivity">

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="42.74dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="14dp"
        android:src="@drawable/ic_left_arrow" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Demo App"
        android:textColor="#0C1226"
        android:textSize="16sp"
        android:textFontWeight="500"
        app:layout_constraintTop_toTopOf="@id/ivBackArrow"
        app:layout_constraintBottom_toBottomOf="@id/ivBackArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_smile_logo" />

    <TextView
        android:id="@+id/tvTxt"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:text="Smile Identity Demo App"
        android:textColor="#141A2D"
        android:textSize="20sp"
        android:textFontWeight="700"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.2.1"
        android:textColor="#484D61"
        android:textSize="14sp"
        android:textFontWeight="400"
        app:layout_constraintTop_toBottomOf="@id/tvTxt"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Smile Identity products are tools for developers to perform real time Digital KYC, identity verification, user onboarding, and user authentication across Africa."
        android:textColor="#040C22"
        android:textSize="16sp"
        android:textFontWeight="400"
        app:layout_constraintTop_toBottomOf="@id/tvVersion"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tvContactLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Contact our support"
        android:textSize="16sp"
        android:textColor="#040C22"
        android:textFontWeight="400"
        android:lineSpacingExtra="3sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_right_arrow" />

    <TextView
        android:id="@+id/tvWebsiteLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContactLink"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="View Website"
        android:textSize="16sp"
        android:textColor="#040C22"
        android:textFontWeight="400"
        android:lineSpacingExtra="3sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_web_link"
        android:drawablePadding="16dp"
        android:drawableRight="@drawable/ic_right_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>