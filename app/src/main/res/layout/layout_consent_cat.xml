<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constrainedWidth="true"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_gravity="left|center_vertical"
    android:gravity="left|center_vertical">
    
    <ImageView
        android:id="@+id/ivCatImg"
        style="@style/consent_screen_consent_cat_img"
        android:src="@drawable/ic_personal_details"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivCatTooltip"
        style="@style/consent_screen_consent_cat_tool_tip_img"
        app:layout_constraintTop_toTopOf="@id/tvCatLbl"
        app:layout_constraintBottom_toBottomOf="@id/tvCatLbl" />

    <TextView
        android:id="@+id/tvCatLbl"
        style="@style/consent_screen_consent_cat_name_txt"
        app:layout_constrainedWidth="true"
        app:layout_constraintRight_toLeftOf="@id/ivCatTooltip"
        app:layout_constraintLeft_toRightOf="@id/ivCatImg" />

</androidx.constraintlayout.widget.ConstraintLayout>