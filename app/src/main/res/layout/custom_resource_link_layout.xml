<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="#E5E5E5">

    <TextView
        android:id="@+id/tvBigTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="20dp"
        android:text="Explore our documentation"
        android:textSize="14sp"
        android:textColor="#040C22"
        android:textFontWeight="600"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tvSmallTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvBigTxt"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="20dp"
        android:text="Read everything related to our solution stack"
        android:textSize="12sp"
        android:textColor="#828A99"
        android:textFontWeight="600"
        android:lineSpacingExtra="6sp"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintTop_toTopOf="@id/tvBigTxt"
        app:layout_constraintBottom_toBottomOf="@id/tvSmallTxt"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1A040C22"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/tvSmallTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>