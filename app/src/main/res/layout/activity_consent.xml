<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsentActivity"
    android:background="#E5E5E5">

    <ImageView
        android:id="@+id/ivBackArrow"
        style="@style/consent_screen_back_img"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvPartnerName"
        style="@style/consent_screen_partner_txt"
        app:layout_constraintTop_toBottomOf="@id/ivBackArrow"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvPartnerName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBigTxt"
                style="@style/consent_screen_big_txt"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSmallTxt"
                style="@style/consent_screen_small_txt"
                app:layout_constraintTop_toBottomOf="@id/tvBigTxt"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/clInfoCat"
                style="@style/consent_screen_info_cat_rv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvSmallTxt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPolicy"
                style="@style/consent_screen_policy_block"
                app:layout_constraintTop_toBottomOf="@id/clInfoCat"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvPolicy"
                    style="@style/consent_screen_policy_txt" />

                <TextView
                    android:id="@+id/tvPolicy2"
                    style="@style/consent_screen_policy_txt_2"
                    app:layout_constraintTop_toBottomOf="@id/tvPolicy" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvAllowBtn"
                style="@style/consent_screen_allow_btn"
                app:layout_constraintLeft_toLeftOf="@id/clPolicy"
                app:layout_constraintRight_toRightOf="@id/clPolicy"
                app:layout_constraintTop_toBottomOf="@id/clPolicy"
                android:onClick="allow" />

            <TextView
                android:id="@+id/tvCancelBtn"
                style="@style/consent_screen_cancel_btn"
                app:layout_constraintLeft_toLeftOf="@id/clPolicy"
                app:layout_constraintRight_toRightOf="@id/clPolicy"
                app:layout_constraintTop_toBottomOf="@id/tvAllowBtn"
                android:onClick="cancel" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvCancelBtn"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="87dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="85dp"
                android:src="@drawable/ic_smile_logo_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>