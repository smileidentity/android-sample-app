<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104.78dp"
    android:layout_height="98.9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_product_btn_bckgrd"
    android:elevation="9.79dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15.85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_basic_kyc" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Basic KYC"
        android:textSize="10sp"
        android:textColor="#100F0F"
        android:textFontWeight="500"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>