<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/darkerGray</item>
        <item name="popupTheme">@style/PopupStyle</item>
        <item name="android:popupBackground">@color/white_color</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkerGray</item>
    </style>

    <style name="PopupStyle" parent="Widget.AppCompat.PopupWindow">
        <item name="android:background">@color/white_color</item>
    </style>
    
    <style name="MainHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnAction">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTint">@color/white_color</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">@drawable/blue_btn_bckgrd</item>
    </style>

    <style name="DlgBtnAction" parent="BtnAction">
        <item name="android:minHeight">40dp</item>
        <item name="layout_constraintWidth_percent">0.4</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>
