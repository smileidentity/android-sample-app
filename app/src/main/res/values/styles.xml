<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/darkerGray</item>
        <item name="popupTheme">@style/PopupStyle</item>
        <item name="android:popupBackground">@color/white_color</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkerGray</item>
    </style>

    <style name="PopupStyle" parent="Widget.AppCompat.PopupWindow">
        <item name="android:background">@color/white_color</item>
    </style>

    <style name="SplashSelfieLogo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/ic_terminal_and_phone</item>
        <item name="layout_constraintWidth_percent">0.4</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="SplashSelfieLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/lbl_smile_identity</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="SplashSelfieVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    
    <style name="MainHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelfieCapture" parent="MainBtnAction">

    </style>

    <style name="SelfieReposition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/lbl_selfie_reposition</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="EnrollResultProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="EnrollResultSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:text">@string/lbl_enroll_result_internet_recovered</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:shadowColor">@color/darkerGray</item>
        <item name="android:trackTint">@color/darkerGray</item>
        <item name="android:switchPadding">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EnrollResultCountryPicker">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="ccpDialog_textColor">@color/darkerGray</item>
        <item name="ccpDialog_backgroundColor">@color/white_color</item>
        <item name="ccp_showFullName">true</item>
        <item name="ccp_showNameCode">false</item>
        <item name="ccp_showPhoneCode">false</item>
    </style>

    <style name="EnrollResultIdTypeSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textColorHint">@color/darkerGray</item>
        <item name="android:popupBackground">@color/white_color</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EnrollResultTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:theme">@style/TextInputLayoutTheme</item>
    </style>

    <style name="TextInputLayoutTheme">
        <item name="colorControlNormal">@color/darkerGray</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/darkerGray</item>
    </style>

    <style name="EnrollResultTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textColorHint">@color/darkerGray</item>
    </style>

    <style name="BtnAction">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTint">@color/white_color</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:background">@drawable/btn_bckgrd</item>
    </style>

    <style name="MainBtnAction" parent="BtnAction">
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="layout_constraintWidth_percent">0.75</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="DlgBtnAction" parent="BtnAction">
        <item name="android:minHeight">40dp</item>
        <item name="layout_constraintWidth_percent">0.4</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="promptStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/app_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="tipStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">8sp</item>
    </style>

</resources>
