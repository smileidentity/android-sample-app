<resources>

    <style name="result_screen_progress_bar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">98.5dp</item>
        <item name="android:layout_height">98.5dp</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_bckgrd</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">123dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="result_screen_uploading_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/enroll_result_screen_upload_default_txt</item>
        <item name="android:gravity">center</item>
        <item name="android:fontWeight">700</item>
        <item name="android:lineHeight">30dp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginTop">64.5dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="result_screen_result_txt" parent="result_screen_uploading_txt">
        <item name="android:layout_marginBottom">27dp</item>
        <item name="android:textColor">#555B69</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/enroll_result_screen_result_default_txt</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="result_screen_upload_btn" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginBottom">103dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20.96dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/enroll_result_screen_upload_now</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">21.22dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:background">@drawable/get_started_start_btn</item>
    </style>

    <style name="result_screen_bottom_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginBottom">43dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:src">@drawable/smile_logo</item>
    </style>

</resources>