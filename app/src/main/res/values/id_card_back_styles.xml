<resources>

    <style name="id_card_dlg_cl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:paddingBottom">27.71dp</item>
        <item name="android:background">@drawable/dlg_bckgrd</item>
    </style>

    <style name="id_card_dlg_top_img">
        <item name="android:layout_width">88.89dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:src">@drawable/ic_passport</item>
    </style>

    <style name="id_card_dlg_tv_heading" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">63dp</item>
        <item name="android:text">@string/id_card_back_dlg_txt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#191D31</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="id_card_dlg_tv_msg" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">37dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:text">@string/id_card_back_dlg_txt_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="id_card_dlg_proceed_btn" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">48.28dp</item>
        <item name="android:layout_marginRight">47dp</item>
        <item name="android:layout_height">49.65dp</item>
        <item name="android:background">@drawable/blue_btn_bckgrd</item>
        <item name="android:layout_marginTop">31dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:text">@string/id_card_back_dlg_proceed_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="id_card_dlg_skip_btn" parent="id_card_dlg_proceed_btn">
        <item name="android:background">@drawable/white_btn_bckgrd</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@string/id_card_back_dlg_skip_btn</item>
        <item name="android:textColor">#121212</item>
    </style>

</resources>