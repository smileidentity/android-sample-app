<resources>

    <style name="sid_info_screen_back_img">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:src">@drawable/ic_left_arrow</item>
    </style>

    <style name="sid_info_screen_heading_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:text">@string/sid_info_screen_heading</item>
        <item name="android:textColor">#0C1226</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">19.36sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sid_info_screen_input_label" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#252C32</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="sid_info_screen_country_input_label" parent="sid_info_screen_input_label">
        <item name="android:text">@string/sid_info_screen_heading</item>
    </style>

    <style name="sid_info_screen_input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableRight">@drawable/ic_down_arrow</item>
        <item name="android:background">@drawable/id_info_input_bckgrd</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9AA6AC</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="sid_info_screen_country_picker">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="ccpDialog_textColor">@color/darkerGray</item>
        <item name="ccpDialog_backgroundColor">@color/white_color</item>
        <item name="ccp_clickable">true</item>
        <item name="ccp_showFullName">true</item>
        <item name="ccp_showNameCode">false</item>
        <item name="ccp_showPhoneCode">false</item>
        <item name="ccp_defaultPhoneCode">234</item>
    </style>

    <style name="sid_info_screen_id_type_spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textColorHint">@color/darkerGray</item>
        <item name="android:popupBackground">@color/white_color</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="sid_info_screen_edit_input_field" parent="sid_info_screen_input_field">
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:textColorHint">#9AA6AC</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="sid_info_continue_btn" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">44.63dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20.96dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/sid_info_screen_continue_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">21.22dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:background">@drawable/get_started_start_btn</item>
    </style>

</resources>