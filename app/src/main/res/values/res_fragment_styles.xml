<resources>

    <style name="res_fragment_heading_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">22.74dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:text">@string/res_fragment_heading_txt</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#100F0F</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineHeight">19.36dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="res_fragment_link_big_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#040C22</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="res_fragment_link_small_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828A99</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="res_fragment_link_arrow_img">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="res_fragment_link_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1A040C22</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>

</resources>