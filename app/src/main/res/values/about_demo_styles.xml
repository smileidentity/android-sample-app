        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="about_demo_screen_version_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#484D61</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="about_demo_screen_small_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/about_demo_screen_small_txt</item>
        <item name="android:textColor">#040C22</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="about_demo_screen_about_link_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#040C22</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
