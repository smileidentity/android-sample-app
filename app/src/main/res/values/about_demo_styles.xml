<resources>

    <style name="about_demo_screen_back_img">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:src">@drawable/ic_left_arrow</item>
    </style>

    <style name="about_demo_screen_heading_txt" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">36dp</item>
        <item name="android:text">@string/about_demo_screen_heading</item>
        <item name="android:textColor">#0C1226</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">500</item>
